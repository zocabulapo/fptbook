@model WEBFPTBOOK.Models.Book 

@{
    ViewBag.Title = "DeleteAll";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>DeleteAll</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Book</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Book Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BookName)
        </dd>

        <dt>
            Book Price
        </dt>

        <dd>
            @String.Format("{0:0,0}",Model.Price) $
        </dd>

        <dt>
            Book Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BookDesc)
        </dd>

        <dt>
            Book Images
        </dt>

        <dd>
            <img src="@Url.Content("~/product_imgs" + Model.BookPic)" style="width:100px" />
        </dd>

        <dt>
            Update Date
        </dt>

        <dd>
            @String.Format("{0:dd/MM/yyyy}", Model.DayUpdate)
        </dd>

        <dt>
            In Stock
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quality)
        </dd>

        <dt>
            Topic
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Topic.TopicID)
        </dd>

        <dt>
            Publisher
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Publisher.PubID)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete All" class="btn btn-default" /> |
            @Html.ActionLink("Back to Manage", "BookManage")
        </div>
    }
</div>
